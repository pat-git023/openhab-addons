		<config-description>
			<parameter name="hostname" type="text" required="true">
				<context>network-address</context>
				<label>Hostname</label>
				<description>Hostname or IP address of the OpenEMS REST Api</description>
			</parameter>
			<parameter name="username" type="text" required="false">
				<label>Username</label>
				<description>Username to access the OpenEMS REST Api</description>
			</parameter>
			<parameter name="password" type="text" required="true">
				<context>password</context>
				<label>Password</label>
				<description>Password to access the OpenEMS REST Api</description>
			</parameter>
			<parameter name="refreshInterval" type="integer" unit="s" min="1">
				<label>Refresh Interval</label>
				<description>Interval the OpenEMS REST Api is polled in sec.</description>
				<default>60</default>
				<advanced>true</advanced>
			</parameter>
		</config-description>
